@model LamDucTai_2310900092.Models.LdtEmployee

@{
    ViewData["Title"] = "Xóa Nhân Viên ";
}

<div class="card shadow-sm mx-auto mt-4" style="max-width: 600px;">
    <div class="card-header bg-danger text-white">
        <h4 class="text-center">Bạn có chắc muốn xóa nhân viên này?</h4>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Họ tên</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LdtEmpName)</dd>

            <dt class="col-sm-4">Cấp bậc</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LdtEmpLevel)</dd>

            <dt class="col-sm-4">Ngày bắt đầu</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LdtEmpStartDate)</dd>

            <dt class="col-sm-4">Trạng thái</dt>
            @if (Model.LdtEmpStatus == true)
            {
                <p>Hiển thị</p>
            }
            else
            {
                <p>Tạm ẩn</p>
            }
        </dl>
    </div>

    <div class="card-footer text-center">
        <form asp-action="LdtDelete">
            <input type="hidden" asp-for="LdtEmpId" />
            <button type="submit" class="btn btn-danger me-2">🗑️ Xác nhận xóa</button>
            <a asp-action="LdtIndex" class="btn btn-secondary">⬅️ Quay lại</a>
        </form>
    </div>
</div>