@model LamDucTai_2310900092.Models.LdtEmployee

@{
    ViewData["Title"] = "Chi Tiết Nhân Viên";
}


<div class="card shadow-sm mx-auto mt-4" style="max-width: 600px;">
    <div class="card-header bg-primary text-white text-center">
        <h3>@ViewData["Title"]</h3>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Họ tên</dt>
            <dd class="col-sm-8">@Model.LdtEmpName</dd>

            <dt class="col-sm-4">Trình độ</dt>
            <dd class="col-sm-8">@Model.LdtEmpLevel</dd>

            <dt class="col-sm-4">Ngày bắt đầu</dt>
            <dd class="col-sm-8">@Model.LdtEmpStartDate?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Trạng thái</dt>
            <dd class="col-sm-8">
                @if (Model.LdtEmpStatus == true)
                {
                    <span class="badge bg-success">Hiển thị</span>
                }
                else
                {
                    <span class="badge bg-secondary">Tạm khóa</span>
                }
            </dd>
        </dl>
    </div>

    <div class="card-footer text-center">
        <a asp-action="LdtEdit" asp-route-LdtId="@Model.LdtEmpId" class="btn btn-warning me-2">
            ✏️ Chỉnh sửa
        </a>
        <a asp-action="LdtIndex" class="btn btn-secondary">
            ⬅️ Quay lại danh sách
        </a>
    </div>
</div>